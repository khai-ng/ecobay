{
  "Serilog": {
    "Properties": {
      "App": "OrderingApi"
    }
  },

  "AllowedHosts": "*",
  "OpenApi": {
    "Endpoint": {
      "Name": "Ordering.API V1"
    },
    "Document": {
      "Description": "The Ordering Service HTTP API",
      "Title": "WKSY - Ordering HTTP API",
      "Version": "v1"
    }
  },
  "Kafka": {
    "Producer": {
      "ProducerConfig": {
        "BootstrapServers": "localhost:9092"
      },
      "Topic": "Orders"
    },
    
    "Consumer": {
      "ConsumerConfig": {
        "BootstrapServers": "localhost:9092",
        "GroupId": "order",
        "AutoOffsetReset": 1
      },
      "Topics": [
        "Identity"
      ]
    }
  }
}
